{
    "name": "jazzi",
    "version": "1.7.0",
    "main": "./dist/jazzi.cjs.js",
    "license": "MIT",
    "types": "types/index.d.ts",
    "publishConfig": {
        "access": "public"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/Jkierem/jazzi"
    },
    "files": [
        "dist",
        "types"
    ],
    "scripts": {
        "build": "yarn build:js && yarn build:deno",
        "build:js": "webpack --mode production",
        "build:deno": "deno run --unstable --allow-read --allow-write ./scripts/build.js",
        "build:watch": "webpack --mode development --watch",
        "clean": "rm -rf ./dist && rm -rf ./deno",
        "test": "rm -rf ./coverage && jest --coverage --verbose",
        "test:silent": "rm -rf ./coverage && jest --silent",
        "test:watch": "jest --verbose --watch",
        "prepublish": "yarn clean && yarn build"
    },
    "dependencies": {
        "ramda": "0.27.0"
    },
    "devDependencies": {
        "@babel/cli": "^7.5.5",
        "@babel/core": "^7.5.5",
        "@babel/preset-env": "^7.5.5",
        "babel-jest": "^24.9.0",
        "babel-loader": "^8.0.6",
        "babel-polyfill": "^6.26.0",
        "jest": "^24.9.0",
        "sinon": "^7.4.1",
        "webpack": "^5.24.3",
        "webpack-cli": "^4.5.0",
        "webpack-dev-server": "^3.8.0"
    },
    "jest": {
        "verbose": true,
        "collectCoverageFrom": [
            "src/*.{js,jsx}",
            "src/*/*.{js,jsx}"
        ],
        "testMatch": [
            "**/__tests__/(*.)test.js"
        ],
        "testEnvironment": "node",
        "transform": {
            ".js$": "babel-jest"
        },
        "transformIgnorePatterns": [
            "<rootDir>/node_modules/"
        ],
        "moduleDirectories": [
            "node_modules",
            "modules"
        ],
        "moduleFileExtensions": [
            "js",
            "json",
            "jsx"
        ],
        "setupFilesAfterEnv": [
            "./setupTests.js"
        ]
    }
}
